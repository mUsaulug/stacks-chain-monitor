# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/stacks_monitor
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# Redis Configuration (for production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Security Configuration
CHAINHOOK_HMAC_SECRET=change-me-in-production-use-strong-secret
JWT_SECRET_KEY=change-me-in-production-use-256-bit-key

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Notification Configuration
NOTIFICATION_EMAIL_FROM=noreply@stacks-monitor.com
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_WEBHOOK_ENABLED=true

# Application Configuration
SPRING_PROFILES_ACTIVE=dev

# Logging
LOG_LEVEL=INFO
